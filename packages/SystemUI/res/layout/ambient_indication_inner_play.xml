<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/ambient_indication_play"
    android:paddingTop="16.0dip"
    android:visibility="invisible"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="70.0dip"
    android:layout_marginStart="64.0dip"
    android:layout_marginEnd="64.0dip"
    android:forceHasOverlappingRendering="false"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <havoc.support.lottie.LottieAnimationView
        android:id="@+id/ambient_indication_icon_play"
         android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginBottom="2dp"
        android:tint="?attr/wallpaperTextColorSecondary"
        android:tintMode="src_in"
        android:forceHasOverlappingRendering="false" />

    <TextView
        android:textSize="14.0sp"
        android:textColor="?attr/wallpaperTextColorSecondary"
        android:id="@+id/ambient_indication_text_play"
        android:layout_marginBottom="6.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:forceHasOverlappingRendering="false" />

</LinearLayout>

